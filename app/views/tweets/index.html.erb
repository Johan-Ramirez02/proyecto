<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to 'Show', tweet %></td>
          <%if user_signed_in? %>
              <%if current_user.id == tweet.user_id %>
                <td><%= link_to 'Show', tweet %></td>
                <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
                <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
              <% end %>
          <% end %>
  </tbody>
</table>

<div class="container m-3">
  <% @tweets.each do |tweet| %>
    <div class="container">
      <div class="container">
        <span class="container"><%= tweet.user.name %></span>
      </div>
      <div class="container mx-5">
        <%= tweet.content %>
            <%if user_signed_in? %>
              <%if current_user.id == tweet.user_id %>
              <br>
                <td><%= link_to 'Show', tweet %></td>
                <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
                <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            <% end %>
      </div>

      <div class="row justify-content-start">
          <% if user_signed_in? %>
            <div class="col-1">
                <%= link_to "#{tweet.global_likes}", likes_path(tweet.id), method: :post, class: "fas fa-paw" %>
            </div>
              <hr>
          <% end %>
      </div>
  <% end %>
</div>
